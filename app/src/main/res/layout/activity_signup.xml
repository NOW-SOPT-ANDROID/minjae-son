<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="SIGN UP"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSignUpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="아이디"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUpTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etSignUpId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:hint="아이디를 입력해주세요"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUpId"
        />

    <TextView
        android:id="@+id/tvSignUpPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="비밀번호"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpId"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etSignUpPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:hint="비밀번호를 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/tvSignUpPw"
        />

    <TextView
        android:id="@+id/tvSignUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="닉네임"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpPw"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etSignUpName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:hint="닉네임을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUpName"
        />

    <TextView
        android:id="@+id/tvSignUpSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="성별"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/cbSignUpSexM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:text="남성"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpName"
        app:layout_constraintStart_toEndOf="@+id/tvSignUpSex"/>

    <CheckBox
        android:id="@+id/cbSignUpSexW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:text="여성"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpName"
        app:layout_constraintStart_toEndOf="@+id/cbSignUpSexM"
        />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="40dp"
        android:text="회원가입 하기"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>